{% extends 'base.html.twig' %}

{% block title %}Modifier l’offre{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto mt-10">
    <h1 class="text-2xl font-bold mb-4">✏️ Modifier l’offre</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.skillOffered) }}
        {{ form_row(form.skillRequested) }}

        <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" type="submit">
            💾 Enregistrer
        </button>
    {{ form_end(form) }}
</div>
{% endblock %}
