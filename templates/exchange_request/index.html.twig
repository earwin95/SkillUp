{% extends 'base.html.twig' %}

{% block title %}Mes demandes d'√©change re√ßues{% endblock %}

{% block body %}
    <h1>üì® Demandes re√ßues pour mes offres</h1>

    {% if pendingRequestsByOffer is empty %}
        <p>Aucune demande en attente.</p>
    {% else %}
        {% for offerId, data in pendingRequestsByOffer %}
            <div class="offer-block">
                <h2>Offre : {{ data.offer.title }}</h2>

                {% if data.requests is empty %}
                    <p>üì≠ Aucune demande pour cette offre.</p>
                {% else %}
                    <ul>
                        {% for request in data.requests %}
                            <li style="margin-bottom: 1rem;">
                                <strong>{{ request.requester.username }}</strong>
                                a demand√© un √©change le
                                {{ request.createdAt|date('d/m/Y H:i') }}.

                                <form method="post" action="{{ path('exchange_request_accept', {id: request.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('accept_exchange_' ~ request.id) }}">
                                    <button type="submit" class="btn btn-success">‚úÖ Accepter</button>
                                </form>

                                <form method="post" action="{{ path('exchange_request_decline', {id: request.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('decline_exchange_' ~ request.id) }}">
                                    <button type="submit" class="btn btn-danger">‚ùå Refuser</button>
                                </form>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block stylesheets %}
<style>
    .offer-block {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .btn {
        padding: 0.4rem 0.8rem;
        border-radius: 4px;
        border: none;
        cursor: pointer;
    }

    .btn-success {
        background-color: #2ecc71;
        color: white;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
        margin-left: 0.5rem;
    }

    .btn-success:hover {
        background-color: #27ae60;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }
</style>
{% endblock %}
