{% extends 'base.html.twig' %}

{% block title %}Mes demandes d'√©change re√ßues{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">üì® Demandes re√ßues pour mes offres</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-800 rounded">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% if pendingRequestsByOffer is empty %}
        <p class="text-gray-500">Aucune demande en attente.</p>
    {% else %}
        {% for offerId, data in pendingRequestsByOffer %}
            <div class="mb-8 p-6 border rounded shadow bg-white">
                <h2 class="text-xl font-semibold mb-4">üõ†Ô∏è Offre : {{ data.offer.title }}</h2>

                {% if data.requests is empty %}
                    <p class="text-gray-500">üì≠ Aucune demande pour cette offre.</p>
                {% else %}
                    <ul>
                        {% for request in data.requests %}
                            <li class="mb-4 p-4 bg-gray-100 rounded shadow-sm">
                                <p class="mb-2">
                                    <strong>{{ request.requester.username }}</strong> a demand√© un √©change le
                                    <span class="text-sm text-gray-600">{{ request.createdAt|date('d/m/Y H:i') }}</span>.
                                </p>

                                <div class="flex gap-2">
                                    <form method="post" action="{{ path('exchange_request_accept', {id: request.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('accept_exchange_' ~ request.id) }}">
                                        <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition">
                                            ‚úÖ Accepter
                                        </button>
                                    </form>

                                    <form method="post" action="{{ path('exchange_request_decline', {id: request.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('decline_exchange_' ~ request.id) }}">
                                        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition">
                                            ‚ùå Refuser
                                        </button>
                                    </form>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
