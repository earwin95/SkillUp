{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-xl">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Mon profil</h1>
            <a href="{{ path('app_home') }}" class="text-blue-600 hover:underline">
                ← Retour à l'accueil
            </a>
        </div>

        <div class="space-y-4 text-gray-700">
            <p><span class="font-semibold">Email :</span> {{ app.user.email }}</p>
            <p><span class="font-semibold">Nom d'utilisateur :</span> {{ app.user.username }}</p>

            {% if app.user.bio %}
                <p><span class="font-semibold">Bio :</span> {{ app.user.bio }}</p>
            {% else %}
                <p><span class="font-semibold">Bio :</span> Aucune bio pour l’instant.</p>
            {% endif %}
        </div>

        <div class="mt-6 text-right">
            <a href="{{ path('app_profile_edit') }}" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                ✏️ Modifier le profil
            </a>
        </div>
    </div>
{% endblock %}
