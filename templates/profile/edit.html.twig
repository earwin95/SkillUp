{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100 px-4">
        <div class="w-full max-w-xl bg-white p-8 rounded-2xl shadow-lg border">
            <h1 class="text-3xl font-bold text-blue-600 mb-6 text-center">‚úèÔ∏è Modifier mon profil</h1>

            {{ form_start(form) }}

            <div class="space-y-6">

                <div>
                    {{ form_label(form.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                    {{ form_widget(form.username, {'attr': {'class': 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-200'}}) }}
                    {{ form_errors(form.username) }}
                </div>

                <div>
                    {{ form_label(form.bio, 'Bio', {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                    {{ form_widget(form.bio, {'attr': {'class': 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-200'}}) }}
                    {{ form_errors(form.bio) }}
                </div>

            </div>

            <div class="flex justify-between items-center mt-8">
                <a href="{{ path('app_profile') }}" class="text-sm text-blue-600 hover:underline">
                    ‚Üê Retour au profil
                </a>

                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
                    üíæ Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
