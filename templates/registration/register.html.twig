{% extends 'base.html.twig' %}

{% block title %}Cr√©er un compte - SkillUp{% endblock %}

{% block body %}
  <section class="hero">
    <h1 class="hero-title">
      Cr√©e ton compte <span>SkillUp</span> ‚ú®
    </h1>
    <p class="hero-sub">
      Rejoins la communaut√©, √©change tes savoir-faire et progresse avec les autres.
    </p>
  </section>

  <div class="form-card">
    {{ form_start(registrationForm) }}

      {# ‚Äî Erreurs globales du formulaire (ex: email d√©j√† utilis√©) ‚Äî #}
      {{ form_errors(registrationForm) }}

      {{ form_row(registrationForm.email, {
        label: 'Adresse email',
        attr: { autocomplete: 'email', placeholder: 'ex. jean.dupont@mail.com' }
      }) }}

      {{ form_row(registrationForm.username, {
        label: "Nom d'utilisateur",
        attr: { autocomplete: 'username', placeholder: 'ex. jean_du67' }
      }) }}

      {{ form_row(registrationForm.plainPassword, {
        label: 'Mot de passe',
        attr: { autocomplete: 'new-password', placeholder: '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢' }
      }) }}

      <div class="checkbox-row">
        {{ form_widget(registrationForm.agreeTerms, {
          attr: { class: 'checkbox-input' }
        }) }}
        <label for="{{ registrationForm.agreeTerms.vars.id }}" class="checkbox-label">
          J‚Äôaccepte les conditions g√©n√©rales
        </label>
        {{ form_errors(registrationForm.agreeTerms) }}
      </div>

      <button type="submit" class="btn btn-primary w-full mt-3">üöÄ S‚Äôinscrire</button>

    {{ form_end(registrationForm) }}
  </div>

  <style>
    .form-card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 20px;
      max-width: 450px;
      margin: 24px auto;
    }

    .form-card label {
      font-weight: 600;
      font-size: 14px;
      color: var(--text);
      margin-bottom: 4px;
      display: inline-block;
    }

    .form-card input[type="email"],
    .form-card input[type="text"],
    .form-card input[type="password"] {
      width: 100%;
      padding: .7rem .9rem;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: #f9fafb;
      margin-bottom: 14px;
      transition: all .2s ease;
      color: var(--text);
    }

    .form-card input:focus {
      border-color: var(--primary);
      background: #fff;
      box-shadow: 0 0 0 4px var(--ring);
      outline: none;
    }

    .form-card .btn {
      display: inline-flex;
      justify-content: center;
      align-items: center;
      padding: .7rem 1.2rem;
      border-radius: 10px;
      font-weight: 700;
      cursor: pointer;
      transition: 0.2s ease;
    }
    .form-card .btn-primary {
      background: var(--primary);
      color: #fff;
      border: none;
    }
    .form-card .btn-primary:hover {
      filter: brightness(.95);
    }

    /* Checkbox custom pour rester dans ton design */
    .checkbox-row {
      display: flex;
      align-items: center;
      gap: .6rem;
      margin: 6px 0 14px;
    }
    .checkbox-input {
      width: 18px;
      height: 18px;
      accent-color: var(--primary);
      cursor: pointer;
    }
    .checkbox-label {
      font-size: 14px;
      color: var(--text);
      cursor: pointer;
    }

    /* Erreurs Symfony int√©gr√©es, harmonis√©es avec ta carte */
    .form-error-message,
    .form-error-icon {
      display: none; /* on masque l‚Äôic√¥ne par d√©faut si th√®me bootstrap n‚Äôest pas utilis√© */
    }
    .form-error {
      color: #b42318;
      background: #fef3f2;
      border: 1px solid #fecdca;
      padding: 8px 10px;
      border-radius: 8px;
      margin: 6px 0 12px;
      font-size: 13px;
    }
    /* Si tu utilises form_row, Symfony met les erreurs juste sous le champ :
       on force un style coh√©rent via le s√©lecteur classique */
    .form-card .form-error-message,
    .form-card .invalid-feedback,
    .form-card ul.form-errors {
      color: #b42318;
      margin: 6px 0 0;
      font-size: 13px;
      list-style: none;
      padding-left: 0;
    }
  </style>
{% endblock %}
