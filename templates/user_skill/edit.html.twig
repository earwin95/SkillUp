{% extends 'base.html.twig' %}
{% block title %}Modifier une compétence{% endblock %}

{% block body %}
<h1>Modifier la compétence</h1>

{% for label, messages in app.flashes %}
  {% for message in messages %}
    <div class="flash-{{ label }}">{{ message }}</div>
  {% endfor %}
{% endfor %}

{{ form_start(form) }}
  {# Dans le contrôleur, on a passé 'disable_skill' => true, le champ est donc désactivé #}
  {{ form_row(form.skill) }}
  {{ form_row(form.level) }}
  {{ form_row(form.notes) }}
  <button class="btn btn-primary">💾 Enregistrer</button>
{{ form_end(form) }}

<p class="mt-3">
  <a class="btn btn-outline-secondary" href="{{ path('app_user_skills_index') }}">← Mes compétences</a>
  <a class="btn btn-secondary" href="{{ path('app_home') }}">🏠 Accueil</a>
</p>
{% endblock %}
